{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es2016",
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}